                                </Rectangle.OpacityMask>
                                <Rectangle.Effect>
                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="8" BlurRadius="10" />
                                </Rectangle.Effect>
                            </Rectangle>

                            <Rectangle HorizontalAlignment="Left" VerticalAlignment="Center" Width="575" Height="40" Margin="0,10,0,0">
