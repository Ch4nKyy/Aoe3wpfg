                            <ComboBoxItem Content="$$33687$$Queen Isabella"/>
                            <ComboBoxItem Content="$$33260$$Queen Elizabeth"/>
                            <ComboBoxItem Content="$$33259$$Napoleon"/>
                            <ComboBoxItem Content="$$33686$$Henry the Navigator"/>
                            <ComboBoxItem Content="$$34016$$Maurice of Nassau"/>
                            <ComboBoxItem Content="$$34017$$Ivan the Terrible"/>
                            <ComboBoxItem Content="$$34018$$Frederick the Great"/>
                            <ComboBoxItem Content="$$34015$$Suleiman"/>
