<Window x:Class="aoe3wpfg.uimpgamesetuppage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoe3wpfg"
        mc:Ignorable="d"
        Title="uimpgamesetuppage"
        Style="{StaticResource WindowStyle}">

    <Viewbox Style="{StaticResource ViewboxMain}">

        <Grid Width="1920" Height="1080" Background="{StaticResource wood_tile}">

            <!--Defining Grid-->
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Background Panels-->
            <Rectangle HorizontalAlignment="Left" Height="775" Width="1400" Margin="20,0,0,0" Grid.Row="2" VerticalAlignment="Top" Style="{StaticResource PanelBGSection}" />

            <Rectangle HorizontalAlignment="Right" Height="962" Width="440" Margin="0,0,45,0" Grid.Row="2" VerticalAlignment="Top" Style="{StaticResource PanelBGSection}" />

            <!--Top Bar-->
            <Grid Grid.Row="0" x:Name="LanHUD">
                <ContentControl Template="{StaticResource Titlebar}" />
                <Grid Height="50" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Back Button-->
                    <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <local:Age3Button x:Name="mpsetup_cancelbutton" Style="{StaticResource SubMenuBackButton}" ConsoleCommand="navigate(/pages/uipregamenew/MainMenu,MainFrame)">
                            $$33157$$Leave Game
                            <Button.ToolTip>
                                <TextBlock FontFamily="arial" FontSize="18" Text="$$41683$$"/>
                            </Button.ToolTip>
                        </local:Age3Button>
                    </Grid>

                    <!--Exit & Options Buttons-->
                    <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,2">
                        <!--Tech Tree button-->
                        <Button Name="hcSummary_TechTree" Height="40" Width="50" HorizontalAlignment="Right" Margin="0,0,5,0" Style="{StaticResource HUDButton}">
                            <Image Source="{StaticResource icon_techtree}" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"></Image>
                            <Button.ToolTip>$$70734$$You can view Technology Trees of all civilizations.</Button.ToolTip>
                        </Button>
                        <Button Name="mphud_options" Height="40" Width="40" Margin="0,0,5,0" Style="{StaticResource HUDButton}">
                            <Image Source="{StaticResource multiplayer_quickicon_settings}" Width="35" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,0"></Image>
                            <Button.ToolTip>$$70706$$Click to open Options.</Button.ToolTip>
                        </Button>
                        <Button Name="mphud_exit" Height="40" Width="40" Margin="0,0,15,0" Style="{StaticResource HUDButton}">
                            <Image Source="{StaticResource multiplayer_quickicon_exit}" Width="35" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,0"></Image>
                            <Button.ToolTip>$$70707$$Exit to Main Menu.</Button.ToolTip>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Black" Direction="-90" ShadowDepth="5" RenderingBias="Quality"/>
                </Grid.Effect>
            </Grid>

            <!--Title & IP Address-->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="25,0,0,0">
                <TextBlock x:Name="mpsetup_gamename_text" FontSize="30" FontWeight="Bold" Height="40" Padding="5" Margin="0,0,0,0" Style="{StaticResource CampaignTitleTextBlockStyle}">
                    $$21131$$LAN Game Name:
                    <TextBlock.ToolTip>
                        <TextBlock FontFamily="arial" FontSize="18" Text="$$22024$$This is the name of the game."/>
                    </TextBlock.ToolTip>
                </TextBlock>
                <!--
                <TextBlock x:Name="mpsetup_IPAddressLabel" FontSize="30" FontWeight="Bold" Height="40" Padding="5" Margin="20,0,0,0" Style="{StaticResource CampaignTitleTextBlockStyle}">
                    $$20241$$IP Address:
                </TextBlock>
                <TextBlock x:Name="mpsetup_IPAddress" FontSize="30" FontWeight="Bold" Height="40" Padding="5" Margin="20,0,0,0" Style="{StaticResource CampaignTitleTextBlockStyle}">
                    127.0.0.1
                </TextBlock>
                -->
            </StackPanel>

            <Grid Grid.Row="2" Margin="5,10,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!--Players-->
                <Grid Grid.Row="0" Grid.Column="1">
