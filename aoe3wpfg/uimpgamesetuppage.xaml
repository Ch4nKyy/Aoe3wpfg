                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="290"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--If AI Player-->

                        <local:Age3KeyboardFocusBorder Margin="110,20,10,20">
