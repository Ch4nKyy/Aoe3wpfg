                                    </local:Age3Button>
                                    <local:Age3Button x:Name="Mods_MyModsOpenDirectoryButton" Style="{StaticResource MainMenuButton}" Width="380" Margin="0,5,0,0" Content="$$71203$$Open Directory">
                                        <Button.ToolTip>$$71207$$Open directory folder where the mods are located.</Button.ToolTip>
                                    </local:Age3Button>
                                    <local:Age3Button x:Name="Mods_MyModsMoreInfoButton" Style="{StaticResource MainMenuButton}" Width="380" Margin="0,5,0,0" Content="$$71204$$More Info">
                                        <Button.ToolTip>$$71208$$Open the page for this Mod in Age of Empires website.</Button.ToolTip>
                                    </local:Age3Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!--Report Popup-->
                <Grid x:Name="modsReporting" Grid.Row="0" Grid.RowSpan="2" Visibility="Collapsed">
                    <ContentControl Template="{StaticResource ScreenBlur}" />

                    <Grid Width="1000" Height="500">
                        <ContentControl Template="{StaticResource PanelBG_Titled}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="75" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70" />
                            </Grid.RowDefinitions>

                            <!--Title-->
                            <TextBlock Style="{StaticResource ConfirmationTitlesStyle}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
                                $$71228$$Report Mod
                            </TextBlock>

                            <Grid Grid.Row="2" Grid.Column="1" Margin="50,0,50,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <local:Age3KeyboardFocusBorder Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
