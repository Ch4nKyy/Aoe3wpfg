                                            <local:Age3Button x:Name="Mods_MyModsOpenLocalModsDirectory"  Style="{StaticResource MainMenuButton}" Width="450" Margin="15,0,0,0" Content="$$71517$$Open Local Mods Directory">
                                                <Button.ToolTip>$$71518$$Click to open your local mods directory.</Button.ToolTip>
                                            </local:Age3Button>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock x:Name="Mods_MyModsRestartText" Style="{StaticResource ConfirmationTitlesStyle}" Grid.Row="3" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        $$71475$$You may need to restart your game for all changes to take effect
                                    </TextBlock>
                                </StackPanel>

                            </Grid>

                            <Grid Grid.Column="1" Margin="25">
                                <StackPanel>
                                    <Image x:Name="Mods_MyModsThumbnailImage"  Width="430" Height="200" Margin="0,5,0,0" Source="/aoe3wpfg;component/resources/images/icons/random_map/amazon/amazon_ss_01.png" Stretch="Fill"/>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,15,10,0">
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$20001$$Name</TextBlock>
                                        <TextBlock x:Name="Mods_MyModsModName" Style="{StaticResource RegularTextBlockStyle}" TextAlignment="Right" Width="420" TextWrapping="Wrap">Mod's Name</TextBlock>
                                        <Rectangle Style="{StaticResource filemanager_dividingline}" Width="420" Margin="0,5,0,5" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$71199$$Author:</TextBlock>
