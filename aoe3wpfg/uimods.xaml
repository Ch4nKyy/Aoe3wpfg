                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71229$$Inaccurate Description
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                                <local:Age3KeyboardFocusBorder Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                    <RadioButton GroupName="ReportReason" x:Name="ReportCheckAdvertisement" >
                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71230$$Advertisement
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                                <local:Age3KeyboardFocusBorder Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                    <RadioButton GroupName="ReportReason" x:Name="ReportCheckTermViolation">
                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71232$$Violates Terms of Services
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                                <local:Age3KeyboardFocusBorder Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                                    <RadioButton GroupName="ReportReason" x:Name="ReportCheckOffensive">
                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71233$$Offensive Content
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                                <local:Age3KeyboardFocusBorder Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                                    <RadioButton GroupName="ReportReason" x:Name="ReportCheckMiscategorized">
                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71234$$Miscatergorized
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                                <local:Age3KeyboardFocusBorder Grid.Row="2" Grid.Column="1" Margin="0,0,10,0">
                                    <RadioButton GroupName="ReportReason" x:Name="ReportCheckOther">
                                        <TextBlock TextWrapping="Wrap" Width="350">
                                            $$71235$$Other:
                                        </TextBlock>
                                    </RadioButton>
                                </local:Age3KeyboardFocusBorder>
                            </Grid>

                            <local:PreviewTextBox Grid.Row="3" Grid.Column="1" x:Name="ReportMessageText" Width="880" VerticalContentAlignment="Center" PreviewText="Write message here..." MaxLength="250">
