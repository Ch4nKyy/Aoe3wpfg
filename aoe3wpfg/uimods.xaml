                                    <Style TargetType="{x:Type local:PreviewTextBox}" BasedOn="{StaticResource {x:Type local:PreviewTextBox}}">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, ElementName=ReportCheckOther}" Value="True">
                                                <Setter Property="IsEnabled" Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </local:PreviewTextBox.Style>
                            </local:PreviewTextBox>

                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <local:Age3Button x:Name="ReportConfirmButton" Style="{StaticResource MainMenuButton}" Width="350" Content="$$70817$$Report" Margin="0,0,0,0" />
                                <local:Age3Button x:Name="ReportCancelButton" Style="{StaticResource MainMenuButton}" Width="350" Content="$$18466$$Cancel" Margin="50,0,0,0" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <!--Publishing Mod-->
                <Grid x:Name="modsPublishing" Grid.Row="0" Grid.RowSpan="2" Visibility="Collapsed">
                    <ContentControl Template="{StaticResource ScreenBlur}" />

                    <Grid Width="1200" Height="800">
                        <ContentControl Template="{StaticResource PanelBG_Titled}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="75" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="230" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="75" />
                            </Grid.RowDefinitions>

                            <!--Title-->
                            <TextBlock x:Name="Publishing_PublishTitle" Style="{StaticResource ConfirmationTitlesStyle}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
                                $$71455$$Publishing Mod
                            </TextBlock>

                            <TextBlock x:Name="Publishing_RestartText" Style="{StaticResource ConfirmationTitlesStyle}" Grid.Column="1" Grid.Row="2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
                                $$71475$$You may need to restart your game for all changes to take effect
                            </TextBlock>

                            <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
