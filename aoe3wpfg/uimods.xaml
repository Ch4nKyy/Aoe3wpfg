                                            <Setter Property="VerticalAlignment" Value="Top"/>
                                            <Setter Property="Width" Value="630"/>
                                            <Setter Property="Height" Value="auto"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Grid>
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Width="220">$$20001$$Name:</TextBlock>
                                        <local:PreviewTextBox x:Name="Publishing_ModNameField" HorizontalAlignment="Right" Width="350" VerticalContentAlignment="Center" MaxLength="50"/>
                                        <Grid.ToolTip>$$71456$$Enter name of mod.</Grid.ToolTip>
                                    </Grid>
                                    <Rectangle Style="{StaticResource filemanager_dividingline}" Width="630" Margin="0,8,0,8" />
                                    <Grid>
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Width="220">$$71199$$Author:</TextBlock>
                                        <TextBlock x:Name="Publishing_Author" Style="{StaticResource RegularTextBlockStyle}" HorizontalAlignment="Right" Width="350" TextWrapping="Wrap">Mod's Name</TextBlock>
                                    </Grid>
                                    <Rectangle Style="{StaticResource filemanager_dividingline}" Width="630" Margin="0,8,0,8" />
