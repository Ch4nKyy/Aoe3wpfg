<Window x:Class="aoe3wpfg.uimods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoe3wpfg"
        mc:Ignorable="d"
        Title="uimods" 
        Style="{StaticResource WindowStyle}">

    <Window.Resources>
        <Style TargetType="{x:Type TabItem}" x:Key="ModsTab">
            <Setter Property="FontFamily" Value="Trajan Pro" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="{StaticResource ButtonTextGradient}" />
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Direction="-90" ShadowDepth="1.5" RenderingBias="Quality" />
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Margin="10,0,0,0" Background="Transparent" BorderThickness="2" CornerRadius="4">
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True">
                                </ContentPresenter>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStopCollection>
                                                <GradientStop Color="#755f22" Offset="0" />
                                                <GradientStop Color="#ceb165" Offset="0.25" />
                                                <GradientStop Color="#ffe6a6" Offset="0.5" />
                                                <GradientStop Color="#ceb165" Offset="0.25" />
                                                <GradientStop Color="#755f22" Offset="1" />
                                            </GradientStopCollection>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100" />
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource MainMenuButtonInnerGradientPress}" />
                                <Setter Property="BorderBrush" Value="{StaticResource MainMenuButtonStrokeGradientOver}"/>
                                <Trigger.EnterActions>
                                    <SoundPlayerAction Source="resources/audio/smallbutton.wav" />
                                </Trigger.EnterActions>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Panel.ZIndex" Value="-100" />
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource MainMenuButtonInnerGradient}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="DarkRed" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="Black" />
                                <Setter Property="Foreground" Value="DarkGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="LikeButton">
            <Setter Property="Height" Value="40" />
            <Setter Property="KeyboardNavigation.AcceptsReturn" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                    </DataTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="{StaticResource MainMenuButtonInnerGradient}" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Name="test" Height="40" Width="auto">
                            <Grid Name="buttoncontainer" RenderTransformOrigin="0.5, 0.5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Grid.RenderTransform>

                                <Rectangle Name="background" Grid.Column="1" Height="38" Fill="{StaticResource ButtonInnerGradient}" RadiusX="5" RadiusY="5"/>
                                <Rectangle Name="highlightover" Grid.Column="1" Height="38" Fill="{StaticResource MainMenuButtonInnerGradientOver}" RadiusX="5" RadiusY="5" Opacity="0"/>
                                <Rectangle Name="highlightpress" Grid.Column="1" Height="38" Fill="{StaticResource MainMenuButtonInnerGradientPress}" RadiusX="5" RadiusY="5" Opacity="0"/>
                                <Rectangle Name="strokeblack" Grid.ColumnSpan="3" Height="40" Fill="Transparent" StrokeThickness="3" Stroke="Black" RadiusX="5" RadiusY="5"/>
                                <Rectangle Name="strokegold" Grid.Column="1" Height="38" Fill="Transparent" StrokeThickness="2" Stroke="{StaticResource ButtonStrokeGradient}" RadiusX="5" RadiusY="5"/>
                                <Rectangle Name="strokegoldover" Grid.Column="1" Height="38" Fill="Transparent" StrokeThickness="2" Stroke="{StaticResource MainMenuButtonStrokeGradientOver}" RadiusX="5" RadiusY="5" Opacity="0"/>
                            </Grid>
                            <Image Name="icon" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/resources/thumbsup.png"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <StopStoryboard BeginStoryboardName="FocusStoryBoard" />
                                    <StopStoryboard BeginStoryboardName="FocusStoryBoard2" />
                                    <StopStoryboard BeginStoryboardName="IsPressedStoryBoard" />
                                    <StopStoryboard BeginStoryboardName="IsPressedStoryBoard2" />
                                    <BeginStoryboard Name="MouseOverStoryBoard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <SoundPlayerAction Source="resources/audio/mouseover_00.wav" />
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="FocusStoryBoard" />
                                    <StopStoryboard BeginStoryboardName="FocusStoryBoard2" />
                                    <StopStoryboard BeginStoryboardName="IsPressedStoryBoard" />
                                    <StopStoryboard BeginStoryboardName="IsPressedStoryBoard2" />
                                    <BeginStoryboard Name="MouseOverStoryBoard2">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="Button.IsFocused" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Name="FocusStoryBoard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <SoundPlayerAction Source="resources/audio/mouseover_00.wav" />
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Name="FocusStoryBoard2">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:.2" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Name="IsPressedStoryBoard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.05" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <SoundPlayerAction Source="resources/audio/bigbutton.wav" />
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Name="IsPressedStoryBoard2">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="buttoncontainer" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:.05" />
                                            <DoubleAnimation Storyboard.TargetName="highlightpress" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                            <DoubleAnimation Storyboard.TargetName="strokegoldover" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:.6" RepeatBehavior="Forever" AutoReverse="True" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="background" Property="Fill" Value="{StaticResource MainMenuButtonInnerGradientDisabled}" />
                                <Setter TargetName="strokegold" Property="Stroke" Value="{StaticResource MainMenuButtonStrokeGradientDisabled}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Style="{StaticResource ViewboxMain}">
        <Grid x:Name="mainGridPanel" Height="1080" Width="1920">
            <Grid x:Name="Mods_MainGrid" Background="{StaticResource wood_tile}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <ContentControl Template="{StaticResource Titlebar}" />
                    <local:Age3Button x:Name="Mods_BackButton" Style="{StaticResource SubMenuBackButton}" IsCancel="true" VerticalAlignment="Center" HorizontalAlignment="Left" Content="$$42451$$Back">
                        <Button.ToolTip>$$42451$$Back</Button.ToolTip>
                    </local:Age3Button>

                    <local:Age3Button x:Name="Mods_XBLSigninButton" Style="{StaticResource MainMenuButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="380" Content="$$71031$$Xbox Live Sign In" ConsoleCommand="XBLSignInOut">
                        <Button.ToolTip>$$71032$$Sign in to Xbox Live.</Button.ToolTip>
                    </local:Age3Button>
                </Grid>

                <TabControl x:Name="MainTabControl" Grid.Row="1" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="0,9,0,0">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabPanel}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </TabControl.Resources>

                    <TabItem x:Name="InstalledModsTab" Style="{StaticResource ModsTab}" Header="$$71185$$Installed Mods">
                        <TabItem.ToolTip>$$71188$$View all installed mods.</TabItem.ToolTip>
                        <Grid Height="950" Width="1800" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="500"/>
                            </Grid.ColumnDefinitions>

                            <!--BG Panel-->
                            <Rectangle Grid.Column="0" Style="{StaticResource PanelBGSection}" Margin="10,102,10,94"/>
                            <Rectangle Grid.Column="1" Style="{StaticResource PanelBGSection}" Margin="10,10,10,10"/>

                            <Grid Grid.Column="0" Margin="0,10,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="90"/>
                                </Grid.RowDefinitions>

                                <!--Search-->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Width="1257" Margin="20,0,0,0">
                                    <local:PreviewTextBox x:Name="Mods_InstalledModsSearch" HorizontalAlignment="Left" Width="490" PreviewText="$$70729$$Search..."/>

                                    <ComboBox x:Name="Mods_InstalledModsTypeDropdown" HorizontalAlignment="Right" Margin="10,0,0,0" Height="40" Width="350" FontSize="20" Padding="8" MaxDropDownHeight="450" Style="{StaticResource RegularCombobox}">
                                        <ComboBoxItem Content="$$71347$$Any" IsSelected="True"/>
                                        <ComboBoxItem Content="$$71348$$AI"/>
                                        <ComboBoxItem Content="$$71349$$Campaign"/>
                                        <ComboBoxItem Content="$$71350$$Data Mod"/>
                                        <ComboBoxItem Content="$$71351$$Graphic"/>
                                        <ComboBoxItem Content="$$71352$$Movie"/>
                                        <ComboBoxItem Content="$$71353$$Music"/>
                                        <ComboBoxItem Content="$$71354$$Random Map"/>
                                        <ComboBoxItem Content="$$71355$$Scenario"/>
                                        <ComboBoxItem Content="$$71356$$Sound"/>
                                        <ComboBoxItem Content="$$71357$$Taunt"/>
                                        <ComboBoxItem Content="$$71358$$Terrian"/>
                                        <ComboBoxItem Content="$$71359$$Menu Background"/>
                                        <ComboBoxItem Content="$$71360$$User Interface"/>
                                        <ComboBoxItem Content="$$71361$$Text"/>
                                        <ComboBox.ToolTip>$$71218$$Select to filter mods.</ComboBox.ToolTip>
                                    </ComboBox>

                                    <local:Age3KeyboardFocusBorder Margin="10,0,0,0">
                                        <CheckBox x:Name="Mods_InstalledModsSubscribedFilterCheckbox" Style="{StaticResource Checkbox_Medium}" Content="$$71192$$Subscribed">
                                            <CheckBox.ToolTip>$$71202$$Display mods that you have subscribed to and hiding My Mods.</CheckBox.ToolTip>
                                        </CheckBox>
                                    </local:Age3KeyboardFocusBorder>
                                </StackPanel>

                                <!--Sort By-->
                                <Grid Grid.Row="1" VerticalAlignment="Bottom" Margin="20,0,30,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <local:Age3KeyboardFocusBorder Margin="0,0,10,0">
                                        <CheckBox x:Name="Mods_InstalledModsEnableAllCheckbox" Grid.Column="0" Style="{StaticResource Checkbox_Medium}" HorizontalAlignment="Left">
                                            <CheckBox.ToolTip>$$71193$$Select to turn on/off all mods.</CheckBox.ToolTip>
                                        </CheckBox>
                                    </local:Age3KeyboardFocusBorder>
                                    <Button x:Name="Mods_InstalledModsNameOrderButton" Grid.Column="1" Style="{StaticResource SubMenuButton}" Margin="2,0,2,0" Content="$$20509$$Name"/>
                                    <Button x:Name="Mods_InstalledModsPriorityOrderButton" Grid.Column="2" Style="{StaticResource SubMenuButton}" Margin="2,0,2,0" Content="$$71191$$Prioity"/>
                                    <Button x:Name="Mods_InstalledModsSubscribedOrderButton" Grid.Column="3" Style="{StaticResource SubMenuButton}" Margin="2,0,2,0" Content="$$71192$$Subscribed"/>
                                </Grid>

                                <!--List Container-->
                                <local:Age3KeyboardFocusBorder Grid.Row="2" Height="730" Width="1260" Margin="0,0,0,0">
                                    <ListView x:Name="Mods_InstalledModsModList" Margin="0,10,0,0" KeyDown="OnKeyDownHandler">
                                        <ListView.Resources>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Style>
                                        </ListView.Resources>

                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Tick" Width="40" DisplayMemberBinding="{Binding Tick}"/>
                                                <GridViewColumn Header="Name" Width="800" DisplayMemberBinding="{Binding Name}"/>
                                                <GridViewColumn Header="Priority" Width="200" DisplayMemberBinding="{Binding Priority}"/>
                                                <GridViewColumn Header="Subsribed" Width="200" DisplayMemberBinding="{Binding Subscribed}"/>
                                            </GridView>
                                        </ListView.View>

                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="FontSize" Value="18" />
                                                <Setter Property="Foreground" Value="#e7e7e7" />
                                                <Setter Property="FontFamily" Value="Trajan Pro" />
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Height" Value="40"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                <Setter Property="Visibility" Value="{Binding Shown}" />
                                                <Setter Property="Focusable" Value="{Binding CanSelect}" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="200"/>
                                                                    <ColumnDefinition Width="200"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Border Grid.Column="0" Grid.ColumnSpan="11" Background="{TemplateBinding Background}" CornerRadius="4"/>

                                                                <!--Checkbox-->
                                                                <CheckBox Grid.Column="0" Focusable="False" Visibility="{Binding ShowSubCheckbox}" Style="{StaticResource Checkbox_Options}" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding Tick, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Command="{Binding InstallChecked}"/>

                                                                <!--Name-->
                                                                <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Name}" Margin="0,0,0,0">
                                                                    <TextBlock.Effect>
                                                                        <DropShadowEffect BlurRadius="5" Color="Black" Direction="-90" ShadowDepth="1" RenderingBias="Quality"/>
                                                                    </TextBlock.Effect>
                                                                </TextBlock>

                                                                <!--Priority-->
                                                                <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Priority}">
                                                                    <TextBlock.Effect>
                                                                        <DropShadowEffect BlurRadius="5" Color="Black" Direction="-90" ShadowDepth="1" RenderingBias="Quality"/>
                                                                    </TextBlock.Effect>
                                                                </TextBlock>

                                                                <!--Subsribed-->
                                                                <TextBlock Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="✔">
                                                                    <TextBlock.Effect>
                                                                        <DropShadowEffect BlurRadius="5" Color="Black" Direction="-90" ShadowDepth="1" RenderingBias="Quality"/>
                                                                    </TextBlock.Effect>
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource RegularTextBlockStyle}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <!--IF player is Subbed to the mod-->
                                                                                <DataTrigger Binding="{Binding IsSubbed}" Value="true">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>

                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <SoundPlayerAction Source="resources/audio/mouseover_00.wav"/>
                                                        </Trigger.EnterActions>
                                                        <Setter Property="Background" Value="{StaticResource ListViewItemGradientOver}" />
                                                        <Setter Property="Foreground" Value="#f6f6f6" />
                                                    </Trigger>

                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Trigger.EnterActions>
                                                            <SoundPlayerAction Source="resources/audio/mouseover_00.wav"/>
                                                        </Trigger.EnterActions>
                                                        <Setter Property="Background" Value="{StaticResource ListViewItemGradientOver}" />
                                                        <Setter Property="Foreground" Value="#f6f6f6" />
                                                    </Trigger>

                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource ListViewItemGradientSelected}" />
                                                        <Setter Property="Foreground" Value="#ffffff" />
                                                    </Trigger>

                                                    <EventTrigger RoutedEvent="PreviewMouseDown">
                                                        <SoundPlayerAction Source="resources/audio/smallbutton.wav" />
                                                    </EventTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </local:Age3KeyboardFocusBorder>
                                <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <local:Age3Button x:Name="Mods_InstalledModsPriorityUpButton" Style="{StaticResource MainMenuButton}" Width="350" Margin="15,0,0,0" Content="$$71194$$Priority Up">
                                            <Button.ToolTip>$$71197$$Move this mod up.</Button.ToolTip>
                                        </local:Age3Button>
                                        <local:Age3Button x:Name="Mods_InstalledModsPriorityDownButton" Style="{StaticResource MainMenuButton}" Width="350" Margin="15,0,0,0" Content="$$71195$$Priority Down">
                                            <Button.ToolTip>$$71198$$Move this mod down.</Button.ToolTip>
                                        </local:Age3Button>
                                    </StackPanel>
                                    <TextBlock x:Name="Mods_InstalledModsRestartText" Style="{StaticResource ConfirmationTitlesStyle}" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        $$71475$$You may need to restart your game for all changes to take effect
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Column="1" Margin="25">
                                <StackPanel>
                                    <Image x:Name="Mods_InstalledModsThumbnailImage" Width="430" Height="200" Margin="0,5,0,0" Source="/aoe3wpfg;component/resources/images/icons/random_map/amazon/amazon_ss_01.png" Stretch="Fill"/>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,15,10,0">
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$20001$$Name:</TextBlock>
                                        <TextBlock x:Name="Mods_InstalledModsModName" Style="{StaticResource RegularTextBlockStyle}" TextAlignment="Right" Width="420" TextWrapping="Wrap">Mod's Name</TextBlock>
                                        <Rectangle Style="{StaticResource filemanager_dividingline}" Width="420" Margin="0,5,0,5" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
                                        <TextBlock  Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$71199$$Author:</TextBlock>
                                        <TextBlock x:Name="Mods_InstalledModsModAuthor" Style="{StaticResource RegularTextBlockStyle}" TextAlignment="Right" Width="420" TextWrapping="Wrap">Author Name</TextBlock>
                                        <Rectangle Style="{StaticResource filemanager_dividingline}" Width="420" Margin="0,5,0,5" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$71200$$Tags:</TextBlock>
                                        <TextBlock x:Name="Mods_InstalledModsModTags" Style="{StaticResource RegularTextBlockStyle}" TextAlignment="Right" Width="420" TextWrapping="Wrap">Tag 1, Tag 2, Tag 3, Tag 4, Tag 5, Tag 6, Tag 7, Tag 8, Tag 9, Tag 10</TextBlock>
                                        <Rectangle Style="{StaticResource filemanager_dividingline}" Width="420" Margin="0,5,0,5" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" Width="420">$$71201$$Size:</TextBlock>
                                        <TextBlock x:Name="Mods_InstalledModsModSize" Style="{StaticResource RegularTextBlockStyle}" TextAlignment="Right" Width="420" TextWrapping="Wrap">99.99 MB</TextBlock>
                                        <Rectangle Style="{StaticResource filemanager_dividingline}" Width="420" Margin="0,5,0,5" />
                                    </StackPanel>

                                    <ScrollViewer Height="160" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
