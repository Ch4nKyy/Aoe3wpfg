                                        <TextBlock x:Name="Publishing_File" Style="{StaticResource RegularTextBlockStyle}" HorizontalAlignment="Right" Width="350" TextWrapping="Wrap">9999.99 MB (9999 files)</TextBlock>
                                    </Grid>
                                    <Rectangle Style="{StaticResource filemanager_dividingline}" Width="630" Margin="0,8,0,8" />
                                    <Grid>
                                        <TextBlock Style="{StaticResource subInfoLeft}" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Width="220">$$19123$$Visibility:</TextBlock>
                                        <ComboBox Name="Publishing_Visibility" Style="{StaticResource OptionsCombobox}" Height="40" HorizontalAlignment="Right" VerticalAlignment="Center" Width="350">
                                            <ComboBox.ToolTip>$$71460$$Public will allow all players to see your published mod. Unlisted will not appear visible to other players.</ComboBox.ToolTip>
                                            <ComboBoxItem Content="$$71461$$Public" IsSelected="True"/>
                                            <ComboBoxItem Content="$$71462$$Unlisted"/>
                                        </ComboBox>
                                        <Grid.ToolTip>$$71460$$Public will allow all players to see your published mod. Unlisted will not appear visible to other players.</Grid.ToolTip>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
