                                        </TextBlock>
                                    </ScrollViewer>
                                </StackPanel>

                                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,10">
                                    <!--Switches between Publish and Unpublished-->
                                    <local:Age3Button x:Name="Mods_MyModsPublishButton" Style="{StaticResource MainMenuButton}" Width="380" Margin="0,5,0,0" Content="$$71226$$Publish">
                                        <Button.ToolTip>$$71227$$Select to publish this mod.</Button.ToolTip>
                                    </local:Age3Button>
                                    <local:Age3Button x:Name="Mods_MyModsUpdateButton" Style="{StaticResource MainMenuButton}" Width="380" Margin="0,5,0,0" Content="$$20512$$Update">
